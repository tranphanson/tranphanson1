<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:background="@drawable/draw_test2"
       android:orientation="horizontal">
       <EditText
           android:layout_width="150dp"
           android:background="@drawable/draw_test2"
           android:layout_height="40dp"
           android:text="Sắp xếp tin rao"
           />
       <EditText
           android:layout_width="150dp"
           android:background="@drawable/draw_test2"
           android:layout_height="40dp"
           android:text="Thông Thường"
           android:layout_marginLeft="50dp"
           />
       <Spinner
           android:layout_width="match_parent"
           android:layout_height="match_parent"></Spinner>
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:text="Khoảng giá:"
            android:textSize="17dp" />

        <TextView
            android:layout_width="100dp"
            android:text="Tất Cả"
            android:textSize="17dp"
            android:textColor="@android:color/holo_green_light"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_height="40dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="120dp"
            android:text="Năm Sản Xuất:"
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="100dp"
            android:text="Tất Cả"
            android:textSize="17dp"
            android:textColor="@android:color/holo_green_light"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_height="40dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="120dp"
            android:text="Tình trạng"
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="100dp"
            android:text="Mới"
            android:textSize="17dp"
            android:textColor="@android:color/holo_blue_light"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="100dp"
            android:text="Cũ    "
            android:textSize="17dp"
            android:textColor="@android:color/holo_blue_light"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_height="40dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="120dp"
            android:text="Xuất xứ"
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="100dp"
            android:text="Trong nước"
            android:textSize="17dp"
            android:textColor="@android:color/holo_blue_light"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="100dp"
            android:text="Nhập Khẩu"
            android:textSize="17dp"
            android:textColor="@android:color/holo_blue_light"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_height="40dp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/draw_test2"
        android:orientation="horizontal">
        <EditText
            android:layout_width="150dp"
            android:background="@drawable/draw_test2"
            android:layout_height="40dp"
            android:text="Nhiên Liệu"
            />
        <EditText
            android:layout_width="150dp"
            android:background="@drawable/draw_test2"
            android:layout_height="40dp"
            android:text="Tất Cả"
            android:gravity="center"
            android:textColor="@android:color/holo_green_light"
            android:layout_marginLeft="50dp"
            />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"></Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/draw_test2"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <EditText
            android:layout_width="150dp"
            android:background="@drawable/draw_test2"
            android:layout_height="40dp"
            android:text="Hộp Số"
            />
        <EditText
            android:layout_width="150dp"
            android:background="@drawable/draw_test2"
            android:layout_height="40dp"
            android:text="Tất Cả"
            android:gravity="center"
            android:textColor="@android:color/holo_green_light"
            android:layout_marginLeft="50dp"
            />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"></Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/draw_test2"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <EditText
            android:layout_width="150dp"
            android:background="@drawable/draw_test2"
            android:layout_height="40dp"
            android:text="Tỉnh/ Thành Phố:"
            />
        <EditText
            android:layout_width="150dp"
            android:background="@drawable/draw_test2"
            android:layout_height="40dp"
            android:text="Toàn Quốc"
            android:gravity="center"
            android:textColor="@android:color/holo_green_light"
            android:layout_marginLeft="50dp"
            />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"></Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bỏ Chọn"
            android:background="@drawable/draw_test4"
            android:layout_marginLeft="20dp"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Lọc"
            android:background="@drawable/draw_test3"
            android:layout_marginLeft="60dp"/>

    </LinearLayout>

</LinearLayout>