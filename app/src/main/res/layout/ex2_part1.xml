<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:text="Hãy nhập Email bạn đã đăng ký với Banxehoi.com .Chúng tôi sẽ gửi email lấy lại mật khẩu tới hòm thư của bạn . Vui lòng kiểm tra cả hòm thư Spam."
        android:padding="5dp"
        android:textSize="14dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:text="Nhập Đúng Email của bạn"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:background="@drawable/draw_test2"
        android:layout_height="40dp" />
    <Button
        android:layout_width="wrap_content"
        android:text="Lấy Lại Mật Khẩu"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="120dp"
        android:background="@drawable/draw_test3"
        android:layout_height="wrap_content" />
</LinearLayout>